{
  "schemaVersion": "0.16",
  "fields": [
    {
      "name": "tradeId",
      "type": "integer",
      "nullable": false,
      "unique": true
    },
    {
      "name": "stock",
      "type": "string",
      "nullable": false
    },
    {
      "name": "side",
      "type": "string",
      "nullable": false
    },
    {
      "name": "tradePrice",
      "type": "decimal",
      "nullable": false
    },
    {
      "name": "volume",
      "type": "integer",
      "nullable": false
    },
    {
      "name": "tradeDatetime",
      "type": "datetime",
      "nullable": false
    },
    {
      "name": "tradeDate",
      "type": "datetime",
      "nullable": false
    },
    {
      "name": "settlementDate",
      "type": "datetime",
      "nullable": false
    }
  ],
  "rules": [
    {
      "rule": "tradeId",
      "constraints": [
        { "field": "tradeId", "greaterThanOrEqualTo": 10000 },
        { "field": "tradeId", "lessThanOrEqualTo": 99999 }
      ]
    },
    {
      "rule": "stock",
      "constraints": [
        { "field": "stock", "inSet": "stockCodes.csv" }
      ]
    },
    {
      "rule": "side",
      "constraints": [
        { "field": "side", "inSet": [ "BUY", "SELL" ] }
      ]
    },
    {
      "rule": "tradePrice",
      "constraints": [
        { "field": "tradePrice", "granularTo": 0.1 },
        {
          "if": { "field": "stock", "equalTo": "LLOY" },
          "then": { "allOf": [
            { "field": "tradePrice", "greaterThan": 49.3 },
            { "field": "tradePrice", "lessThan": 50.0 }
          ]}
        },
        {
          "if": { "field": "stock", "equalTo": "BARC" },
          "then": { "allOf": [
            { "field": "tradePrice", "greaterThan": 136.1 },
            { "field": "tradePrice", "lessThan": 137.0 }
          ]}
        },
        {
          "if": { "field": "stock", "equalTo": "BP" },
          "then": { "allOf": [
            { "field": "tradePrice", "greaterThan": 490.0 },
            { "field": "tradePrice", "lessThan": 500.0 }
          ]}
        }
      ]
    },
    {
      "rule": "volume",
      "constraints": [
        { "field": "volume", "greaterThanOrEqualTo": 1 },
        { "field": "volume", "lessThanOrEqualTo": 20 }
      ]
    },
    {
      "rule": "tradeDatetime",
      "constraints": [
        { "field": "tradeDatetime", "granularTo": "millis" },
        { "field": "tradeDatetime", "after":"2019-09-02T09:30:00.000" },
        { "field": "tradeDatetime", "before": "2019-09-02T16:30:00.000" }
      ]
    },
    {
      "rule": "tradeDate",
      "constraints": [
        { "field": "tradeDate", "granularTo": "days" },
        { "field": "tradeDate", "equalTo": "2019-09-02T00:00:00.000" }
      ]
    },
    {
      "rule": "settlementDate",
      "constraints": [
        { "field": "settlementDate","equalToField": "tradeDate", "offset": 5, "offsetUnit": "working days" }
      ]
    }
  ]
}