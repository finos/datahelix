{
  "schemaVersion": "0.6",
  "fields": [
    {
      "name": "first_name"
    }
  ],
  "rules": [
    {
      "constraints": [
        {
          "not": {
            "field": "first_name",
            "is": "null"
          }
        },
        {
          "field": "first_name",
          "is": "ofType",
          "value": "string"
        },
        {
          "field": "first_name",
          "is": "matchingRegex",
          "value": "(Joh?n|Mar[yk])"
        }
      ]
    }
  ]
}